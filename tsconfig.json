{
  "compilerOptions": {
    "target": "es6",
    "module": "Node16",   //es2015
    "lib": [
      "dom",
      "es6",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules"
  ]
}